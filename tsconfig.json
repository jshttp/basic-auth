{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "rootDirs": ["./src"],
    "outDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["./node_modules"],
}
